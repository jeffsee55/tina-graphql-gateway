#!/usr/bin/env node

require = require("esm")(module);
const build = require("../dist")
const pnp = require(`pnpapi`);
const chokidar = require('chokidar');
const path = require("path")

// build.init(process.argv);

// pnp.getDependencyTreeRoots().map(packageLocator => {
